<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/Home.css">
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SIGO", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Carros", "Index", "Carros")</li>
                    <li>@Html.ActionLink("Clientes", "Index", "Clientes")</li>
                    <li>@Html.ActionLink("Consultar serviço", "Index", "ItensOrdems")</li>
                    <li>@Html.ActionLink("Fornecedores", "Index", "Fornecedors")</li>
                    <li>@Html.ActionLink("Marcas", "Index", "Marcas")</li>
                    <li>@Html.ActionLink("Ordem de serviços", "Index", "OrdemDeServicoes")</li>
                    <li>@Html.ActionLink("Produtos", "Index", "Produtoes")</li>
                    <li>@Html.ActionLink("Serviços", "Index", "Servicoes")</li>
                    <li id="Logout">@Html.ActionLink("Logout!", "HomeInicial", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="text-align:center;">
            <p>&copy; @DateTime.Now.Year - Sistema Inteligente Gerenciador de Oficinas</p>
        </footer>
    </div>



    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
