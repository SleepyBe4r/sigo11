@model IEnumerable<Projeto_SIGO_Web.Models.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Clientes</h2>

<p>
    @Html.ActionLink("Adicionar Cliente", "Create", new { @class = "btn btn-outline-primary" } )
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Celular)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF_CNPJ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco.Rua)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco.Numero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco.Complemento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco.Cidade.Nome)
        </th>    
        <th>
            @Html.DisplayNameFor(model => model.Endereco.Cidade.Estado.Sigla)
        </th>
        <th>Ações</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Tipo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Celular)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CPF_CNPJ)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Endereco.Rua)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Endereco.Numero)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Endereco.Complemento)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Endereco.Cidade.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Endereco.Cidade.Estado.Sigla)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "btn btn-primary" }) |
        <button type="button" class="btn btn-danger" data-item="@item.ID">Excluir</button>
    </td>
</tr>
    }

</table>
    
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/js/Mascara.js"></script>
    <script src="~/js/Cliente.js"></script>
}
